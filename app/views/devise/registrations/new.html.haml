.wrapper
  .container
    .devise__container__form
      .devise__container__form__title
        %h2 ユーザー登録
        %p ブックマーク（マイレシピ）機能やレシピの投稿機能が
        %p ご利用できます
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .devise__container__form__name__field
          %h3 ニックネーム
          %p ※10字以内。
          = f.text_field :name, autofocus: true
        .devise__container__form__email__field
          %h3 メールアドレス
          = f.email_field :email
        .devise__container__form__birth__field
          %h3 生年月日
          .devise__container__form__birth__field__select
            = f.select :year, ["--"], {}, {class: "select_birth_box", id: "select_birth_year"}
            %span年
            = f.select :month, ["--"], {}, {class: "select_birth_box", id: "select_birth_month"}
            %span月
            = f.select :day, ["--"], {}, {class: "select_birth_box", id: "select_birth_day"}
            %span日
        .devise__container__form__password__field
          %h3 パスワードを設定してください
          %p ※半角8字以上。
          = f.password_field :password, autocomplete: "off", placeholder: "パスワード(英数字8文字以上)"
          %p ※確認用
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード(確認用)"
        .devise__container__form__submit__field
          = f.submit "入力した内容で登録する", class: 'btn registration'
